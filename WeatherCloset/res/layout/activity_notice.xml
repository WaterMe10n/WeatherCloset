<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context=".Notice" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="15"
        android:orientation="vertical" >

        <ListView
            android:id="@+id/list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
        </ListView>
    </LinearLayout>
 
    <LinearLayout
        android:id="@+id/bottombtn"
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_gravity="bottom"
        android:layout_weight="2"
        android:background="#000000"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/myPageBtn"
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/mypagebtn"
            android:contentDescription="@string/a"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/newPostBtn"
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/newpostbtn"
            android:contentDescription="@string/a"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/homeBtn"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/homebtn"
            android:contentDescription="@string/a"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/noticeBtn"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_margin="11dp"
            android:layout_weight="1"
            android:background="@drawable/noticebtn"
            android:contentDescription="@string/a"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/settingBtn"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/settingbtn"
            android:contentDescription="@string/a"
            android:scaleType="centerCrop" />
    </LinearLayout>

</LinearLayout>